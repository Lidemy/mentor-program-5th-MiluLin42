<!DOCTYPE html>
  <head>
    <%- include('template/head') %>
  </head>
  <html>
    <%- include('template/navbar') %>

    <div class="container">
      <form method="POST" action="/post/<%= post.id %>">
        <div class="card">
          <div class="card-body">
            <% if (username) { %> 
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-outline-info" type="submit" href="/update_posts/<%= post.id %>">編輯</a>
              </div>
            <% } %>
            <h3><%= post.title %></h3>
            <%= post.content %>
          </div>
        </div>
      </form>
    </div>

</html>