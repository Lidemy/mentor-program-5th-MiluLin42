<!DOCTYPE html>
  <head>
    <%- include('template/head') %>
  </head>
  <html>
    <%- include('template/navbar') %>

    <div class="container" method="POST" action="/post">
      <% posts.forEach(function(post) { %>
        <div class="card">
          <div class="card-body" style="width: 100%; overflow: hidden; white-space: nowrap; height: 200px;">
            <h5 class="card-title"><%= post.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= post.created_at %></h6>
            <p class="card-text"><%= post.content %></p>
            <a href="/post/<%= post.id %>" class="card-link">閱讀更多</a>
        </div>
      <% }) %>
    </div>

</html>