<!DOCTYPE html>
<head>
  <%- include('template/head') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>

<html>
  <%- include('template/navbar') %>
  <div class="container" method="POST" action="/backstage">
    <a type="submit" class="btn btn-danger mt-3" href="/add_prize">新增獎項</a>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">獎項</th>
          <th scope="col">圖片網址</th>
          <th scope="col">說明</th>
          <th scope="col">機率</th>
          <th scope="col">目前獎項設定</th>
          <th scope="col">編輯/<br>刪除</th>
        </tr>
      </thead>
      <tbody>
        <% prizes.forEach(e => { %>
          <tr>
            <th scope="row"><%= e.id %></th>
            <td><%= e.prizeItem %></td>
            <td><%= e.picUrl %></td>
            <td><%= e.desc %></td>
            <td><%= e.probability %></td>
            <td><%= e.isActive %></td>
            <td>
              <a type="sumit" class="btn btn-secondary btn-sm" href="/update_prize/<%= e.id %>">編輯</button>
              <a type="sumit" class="btn btn-secondary btn-sm" href="/delete_prize/<%= e.id %>">刪除</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('template/footer') %>
</html>
